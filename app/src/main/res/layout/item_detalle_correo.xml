<?xml version="1.0" encoding="utf-8"?>

    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="14dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        android:backgroundTint="@color/light_font"
        app:strokeColor="#D7918C8C"
        app:strokeWidth="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imgViewCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight=".6"
                    app:srcCompat="@drawable/mail_svg_black"
                    />

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:scaleType="center"
                    android:src="@drawable/card_example" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight=".4"
                android:gravity="center|center_horizontal"
                android:orientation="vertical"
                android:padding="1dp"
                android:weightSum="2">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/nomUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:longClickable="false"
                        android:fontFamily="@font/helvetica"
                        android:gravity="center|start"
                        android:text="Asunto" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/correo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:longClickable="false"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica"
                        android:gravity="center|start"
                        android:text="Correo@hotmail.com" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>