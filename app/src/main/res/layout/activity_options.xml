<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sidemenuactivities.OptionsActivity">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Opciones"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:padding="10dp"
            android:text="Nombre: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nombreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:padding="10dp"
            android:text="jeje"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:padding="10dp"
            android:text="Contraseña: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contraseniaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:inputType="textPassword"
            android:padding="10dp"
            android:text="Jeje "
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:fontFamily="@font/helvetica"
            android:padding="10dp"
            android:text="Cerrar sesión cuando se minimiza la App o el dispositivo está en espera"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="Regresar"
            android:textColor="#f56042"
            android:textSize="14sp"
            app:rippleColor="#f56042" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#023E8A"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="Editar"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:rippleColor="#0096C7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#FF2222"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="Eliminar usuario"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:rippleColor="#0096C7" />

    </LinearLayout>
</LinearLayout>