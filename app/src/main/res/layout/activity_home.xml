<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/sideMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/side_header"
        app:menu="@menu/sidemenu">

    </com.google.android.material.navigation.NavigationView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="add"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight=".1"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="#023E8A"
                android:gravity="top">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:navigationIcon="@drawable/ic_menu_24px"
                    app:title="Home"
                    app:titleTextColor="@color/white" />
            </com.google.android.material.appbar.AppBarLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/field">

            </SearchView>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/allTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Todos los elementos" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/passTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ContraseÃ±as" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/noteTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Notas" />

            </com.google.android.material.tabs.TabLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/helvetica"
                android:text="Mas Recientes" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:gravity="bottom"
            android:orientation="vertical">

            <io.github.yavski.fabspeeddial.FabSpeedDial
                android:id="@+id/fabSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:fabGravity="bottom_end"
                app:fabMenu="@menu/fabmenu"
                app:miniFabBackgroundTint="#3F51B5"
                app:miniFabDrawableTint="#FFFFFF"
                app:miniFabTitleTextColor="#3F51B5" />

        </FrameLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>