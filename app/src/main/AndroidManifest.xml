<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="portafolio.apps.passwordmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PasswordManager">
        <activity
            android:name=".activities.HomeTabActivity"
            android:label="@string/title_activity_home_tab"
            android:theme="@style/Theme.PasswordManager.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".formviewsactivities.ViewContrasenia"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".formviewsactivities.ViewPagos"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".formviewsactivities.ViewNotas"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".formviewsactivities.ViewCuentas"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".formviewsactivities.ViewCorreo"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".formactivities.FormNota"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".formactivities.FormPagos"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".formactivities.FormContrasenia"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="adjustNothing"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".formactivities.FormCuenta"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".formactivities.FormCorreo"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>
</manifest>